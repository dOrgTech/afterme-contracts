{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Export ESLint Errors to File",
      "type": "shell",
      "command": "npx eslint \"${file}\" > \"${file}.eslint-errors.txt\"",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/d",
            "/c"
          ]
        }
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    }
  ]
}